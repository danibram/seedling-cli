{
    "compilerOptions": {
        "target": "es5",
        "outDir": "build",
        "rootDir": "src",
        "moduleResolution": "node",
        "module": "commonjs",
        "declaration": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "listFiles": false,
        "traceResolution": false,
        "strictNullChecks": false,
        "pretty": true,
        "lib": ["es6"],
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@helpers": ["./src/helpers"]
        }
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules/**"],
    "compileOnSave": false
}
